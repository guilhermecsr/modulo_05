<h1><%= t('messages.listing', model: @subjects.model_name.human(count: 2)) %></h1>


<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col"><%= translate_field(@subjects, :description) %></th>
    <th>
      <%= link_to  new_admins_backoffice_subject_path,
                   class: "btn btn-outline-success btn-circle btn-lg" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.id %></td>
      <td><%= subject.description %></td>
      <td>
        <%= link_to edit_admins_backoffice_subject_path(subject),
                    class: "btn btn-outline-primary btn-circle" do %>
          <i class="fa fa-edit"></i>
        <% end %>

        <%= link_to admins_backoffice_subject_path(subject), method: :delete,
                    class: "btn btn-danger btn-circle btn-sm",
                    data: {confirm: t('messages.confirm_with',
                    item: subject.description.truncate(15) )} do %>
          <i class="fa fa-minus"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="float-none">
  <%= paginate @subjects %>
</div>
