<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= action_message %></h1>
  </div>
  <!--   /.col-lg-12-->
</div>

<!--<button type="submit" class="btn btn-primary mb-2">Submit</button>-->

<div class="row">

  <% if @question.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= "#{action_message} #{t('messages.question', count: 1)}" %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-9">
            <%= form_with(model: [ :admins_backoffice, @question ], local: true) do |form| %>

              <div class="form-group">
                <%= form.label :description %>
                <%= form.text_area :description, class: "form-control", placeholder: t('placeholder.description_question'), rows: 5 %>
              </div>

              <div class="form-group">
                <%= form.label :subject %>
                <%= form.collection_select(:subject_id, @subjects.order(:description), :id, :description, {}, { class:"form-control" } ) %>
              </div>

              <button type="submit" class="btn btn-primary"><%= t('buttons.save', model: nil) %></button>
            <% end %>
          </div>
          <!-- /.col-lg-6 (nested) -->
        </div>
        <!-- /.row (nested) -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
