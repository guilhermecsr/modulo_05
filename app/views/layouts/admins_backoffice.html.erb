<!DOCTYPE html>
<html>
<header>

  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to 'Home', root_path, class:"text-white" %>
        </li>
      </ul>

      <span class="navbar-text text-white">
        <h2><strong>Backoffice Administrativo</strong></h2>
      </span>

      <ul class="navbar-nav">
        <li class="nav-item active">
        <%= link_to 'Fazer logoff [ADM]', destroy_admin_session_path, method: :delete, class:"btn btn-danger btn-sm" %>
        </li>
      </ul>
    </div>
  </nav>

  <title>TimeToAnswer</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</header>

<body class="admin">

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="list-group">

        <li class="list-group-item active">
          Menu
        </li>

        <li class="list-group-item list-group-item-action">
          <%= link_to admins_backoffice_welcome_index_path do %>
          <i class="fa fa-dashcube"> Dashboard</i>
          <% end %>
        </li>

        <li class="list-group-item list-group-item-action">
          <%= link_to admins_backoffice_admins_path do %>
            <i class="fa fa-users"> Administradores</i>
          <% end %>
        </li>

        <li class="list-group-item list-group-item-action">
          <%= link_to admins_backoffice_subjects_path do %>
          <i class="fa fa-file-text"> Assuntos/Areas</i>
          <% end %>
        </li>

        <li class="list-group-item list-group-item-action">
          <%= link_to admins_backoffice_questions_path do %>
            <i class="fa fa-th-list"> Perguntas</i>
          <% end %>
        </li>
      </div>
    </div>

    <div class="col-md-9">
      <%= yield %>
    </div>

  </div>
</div>
</body>
</html>
